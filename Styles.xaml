<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">





    <Style x:Key="ComboBoxes" TargetType="ComboBox">
        <Setter Property="FontFamily" Value="SemiBold"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <Style x:Key="TextBox" TargetType="TextBox">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="#37474f"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

    <Style x:Key="Buttons" TargetType="Button">
        <Setter Property="FontFamily" Value="SemiBold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Background" Value="Wheat"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <Style x:Key="Labels" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Tw Cen MT"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="#37474f"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

    <Style x:Key="PasswordBoxes" TargetType="PasswordBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="SemiBold"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <Style x:Key="TextBlocks" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Semibold"/>
        <Setter Property="FontFamily" Value="SemiBold"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

</ResourceDictionary>